{
  "name": "subsplit",
  "version": "1.0.0",
  "description": "A subsciption sharing management web app.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseferreira5/SubSplit.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joseferreira5/SubSplit/issues"
  },
  "homepage": "https://github.com/joseferreira5/SubSplit#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "express-session": "^1.16.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^1.7.0",
    "nodemailer": "^6.3.0",
    "nodemon": "^1.19.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^5.18.4"
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.11.1"
  }
}
